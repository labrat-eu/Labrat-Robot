## Encoding.
DOXYFILE_ENCODING = UTF-8
INPUT_ENCODING = UTF-8

## General config.
PROJECT_NAME = @LOCAL_PROJECT_NAME@
PROJECT_BRIEF = @LOCAL_PROJECT_DESCRIPTION@
PROJECT_NUMBER = @GIT_SEMVER@
PROJECT_LOGO = @PROJECT_SOURCE_DIR@/docs/img/logo.png

## Output config.
OUTPUT_DIRECTORY = @CMAKE_BINARY_DIR@/docs
OUTPUT_LANGUAGE = English
ALLOW_UNICODE_NAMES = NO
CREATE_SUBDIRS = NO
SHORT_NAMES = NO

# File patterns.
INPUT = @PROJECT_SOURCE_DIR@/docs/md @CMAKE_BINARY_DIR@/include
FILE_PATTERNS = *.md,*.hpp
RECURSIVE = YES
CASE_SENSE_NAMES = YES
SOURCE_BROWSER = NO

# Examples and images.
EXAMPLE_PATH = @PROJECT_SOURCE_DIR@/examples
IMAGE_PATH = @PROJECT_SOURCE_DIR@/docs/img

## Generator options.
VERBATIM_HEADERS = YES
BRIEF_MEMBER_DESC = YES
REPEAT_BRIEF = YES
ABBREVIATE_BRIEF = NO
ALWAYS_DETAILED_SEC = NO
INLINE_INHERITED_MEMB = YES
FULL_PATH_NAMES = YES
STRIP_FROM_PATH = @CMAKE_BINARY_DIR@/include/@LOCAL_PROJECT_PATH_FULL@
