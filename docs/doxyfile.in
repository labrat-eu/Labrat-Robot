HTML_OUTPUT = html
HTML_TIMESTAMP = YES
HTML_DYNAMIC_MENUS = YES
HTML_DYNAMIC_SECTIONS = YES
HTML_HEADER = @PROJECT_SOURCE_DIR@/docs/css/header.html
