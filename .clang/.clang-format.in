# Format file for clang-format.

# This config is applicable to C/C++20 files.
Language: Cpp
Standard: c++20

# General options
DeriveLineEnding: false
DerivePointerAlignment: false
UseCRLF: false
UseTab: Never
LineEnding: LF
InsertNewlineAtEOF: true
KeepEmptyLinesAtEOF: false

# Line width rules.
ColumnLimit: 140

# Indentation rules.
IndentWidth: 2
ConstructorInitializerIndentWidth: 2
ContinuationIndentWidth: 2
IndentAccessModifiers: false
IndentCaseBlocks: false
IndentCaseLabels: true
IndentExternBlock: NoIndent
IndentGotoLabels: true
IndentRequires: false
IndentWrappedFunctionNames: false
IndentRequiresClause: false
LambdaBodyIndentation: OuterScope
NamespaceIndentation: None
RequiresExpressionIndentation: OuterScope

# Brace rules.
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterStruct: true
  AfterEnum: true
  AfterUnion: true
  AfterFunction: true
  SplitEmptyFunction: false
InsertBraces: true
RemoveParentheses: ReturnStatement

# Function signature line brake rules.
AllowAllArgumentsOnNextLine: true
AllowAllParametersOfDeclarationOnNextLine: false
AlwaysBreakAfterReturnType: None
AlwaysBreakTemplateDeclarations: Yes
BinPackArguments: false
BinPackParameters: false
PackConstructorInitializers: Never
BreakBeforeBinaryOperators: NonAssignment
RequiresClausePosition: OwnLine

# Block line break rules.
AllowShortBlocksOnASingleLine: Empty
AllowShortFunctionsOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: Never
AllowShortLambdasOnASingleLine: Empty
AllowShortLoopsOnASingleLine: false
CompactNamespaces: false

# Other line break rules.
AllowShortCaseLabelsOnASingleLine: false
AllowShortEnumsOnASingleLine: false
AllowShortCompoundRequirementOnASingleLine: false
AlwaysBreakBeforeMultilineStrings: false
BreakBeforeConceptDeclarations: true
BreakBeforeTernaryOperators: false
BreakConstructorInitializers: AfterColon
BreakInheritanceList: AfterColon
BreakAfterAttributes: Never
BreakStringLiterals: true
BreakAdjacentStringLiterals: true
BreakArrays: false
BreakBeforeInlineASMColon: OnlyMultiline
Cpp11BracedListStyle: true
ReflowComments: true

# Alignment rules.
AlignAfterOpenBracket: BlockIndent
AlignArrayOfStructures: None
AlignConsecutiveAssignments: None
AlignConsecutiveBitFields: None
AlignConsecutiveDeclarations: None
AlignConsecutiveMacros: None
AlignEscapedNewlines: DontAlign
AlignOperands: DontAlign
AlignTrailingComments: false
AlignConsecutiveShortCaseStatements:
  Enabled: false

# Line spacing rules.
EmptyLineAfterAccessModifier: Never
EmptyLineBeforeAccessModifier: Always
KeepEmptyLinesAtTheStartOfBlocks: false
MaxEmptyLinesToKeep: 1

# In-line spacing and alignment rules.
BitFieldColonSpacing: Both
PointerAlignment: Right
QualifierAlignment: Left
ReferenceAlignment: Right
SpaceAfterCStyleCast: false
SpaceAfterLogicalNot: false
SpaceAfterTemplateKeyword: true
SpaceAroundPointerQualifiers: Default
SpaceBeforeAssignmentOperators: true
SpaceBeforeCaseColon: false
SpaceBeforeCpp11BracedList: false
SpaceBeforeCtorInitializerColon: true
SpaceBeforeInheritanceColon: true
SpaceBeforeParens: ControlStatements
SpaceBeforeRangeBasedForLoopColon: true
SpaceInEmptyBlock: false
SpaceInEmptyParentheses: false
SpacesBeforeTrailingComments: 2
SpacesInAngles: false
SpacesInCStyleCastParentheses: false
SpacesInConditionalStatement: false
SpacesInContainerLiterals: false
SpacesInLineCommentPrefix:
  Minimum: 1
  Maximum: 1
SpacesInParentheses: false
SpacesInSquareBrackets: false

# Comment rules.
FixNamespaceComments: true

# Preprocessor rules.
IncludeBlocks: Regroup
IncludeCategories:
  # Local header
  - Regex: '^<@LOCAL_PROJECT_PATH@\/.*>$'
    Priority: 1
    SortPriority: 1
    CaseSensitive: true
  # C library header
  - Regex: '^<.*\.h>$'
    Priority: 2
    SortPriority: 3
    CaseSensitive: true
  # C++ library header
  - Regex: '^<.*\.(hpp|inl)>$'
    Priority: 3
    SortPriority: 4
    CaseSensitive: true
  # C++ system header
  - Regex: '^<.*>$'
    Priority: 4
    SortPriority: 2
    CaseSensitive: true
IndentPPDirectives: None
SortIncludes: true

# Other rules
RemoveSemicolon: true
